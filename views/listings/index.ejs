<%layout("/layout/boilerplate")-%>

<div class="container mb-3">
  <!-- Toggle button for small screens -->
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#filterMenu" aria-controls="filterMenu" aria-expanded="false" aria-label="Toggle Filters">
    <span class="navbar-toggler-icon"></span>
    <b>Filters</b>
  </button>

  <!-- Filters section -->
  <div id="filterMenu" class="collapse">
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i> Trending</div>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i> Room</div> 
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i> Iconic cities</div>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i> Mountains</div> 
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i> Castles</div>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i> Amazing pools</div> 
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tents"></i> Camping</div>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-wheat-awn"></i> Farm</div> 
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault"> Display Taxes</label>
        </div>
      </div>
    </div>
  </div>
</div>

    
 

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card" style="width: 20rem">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">

                <div class="card-img-overlay">abc</div>




                <div class="card-body">
                  <h5 class="card-title"><%= listing.title %></h5>
                  <p class="card-text">
                <br>
                &#8377;<%= listing.price.toLocaleString("en-IN")%>/night
                <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
            </p>
           
                  <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                </div>
              </div>
            </a>
              <%}%>
        
    </div>


   

